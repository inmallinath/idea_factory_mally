<h1> Sign - In</h1>
<%= form_tag sessions_path, class: "form-horizontal" do %>
  <div class="form-group">
    <%= label_tag :email, "Registered Email", :class=>"control-label col-sm-2"%>
    <div class="col-sm-6">
      <%= email_field_tag :email, "", class: "form-control", autofocus: true, placeholder: "youremail@somedomain.com"%>
    </div>
  </div>

  <div class="form-group">
    <%= label_tag :password, "Password", class: "control-label col-sm-2"%>
    <div class="col-sm-6">
      <%= password_field_tag :password, "", class: "form-control"%>
    </div>
  </div>

  <div class="form-group">
    <div class="col-sm-offset-2 col-sm-10">
      <%= submit_tag "Sign In", class: "btn btn-primary" %>
    </div>
  </div>
<%end%>
